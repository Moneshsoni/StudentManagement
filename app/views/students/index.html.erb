<strong><h1><%= notice%></h1></strong>
<h1>Listing students</h1>

<%= link_to "Add Student", new_student_path%><br>
<br>
<table>
    <thead>
        <tr>
            
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email </th>
            <th>Add </th>
            <th colspan = "5">Actions</th>
           
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student|%>
            <tr>
                <td><%= student.first_name%></td>
                
                <td> <%= student.last_name%></td>
                <td> <%= add() %>  </td>
                <td> <%= student.email%></td>  

                <td><%= link_to 'View',student%></td>
                <td><%= link_to 'Edit',edit_student_path(student)%></td>
                 <td><%#= link_to "Delete", student_path(student), method: :delete %></td>
               <%#= button_to 'Delete',url_for(action: :destroy, id: student.id), data: {confirm: "Are you sure?"} %></td>
                <td><%= link_to 'Delete', student, method: :delete,
  data: {confirm: 'Are you sure you want Delete?'} %></td>
            </tr>
        <%end%>
    </tbody>
</table>