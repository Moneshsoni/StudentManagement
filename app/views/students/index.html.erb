<div class = "col-lg-10">

<strong><h1><%= notice%></h1></strong>
<h1>Listing students</h1>
<%= search_form_for @q, url: :students do |form| %>
    <div class= "form-group">
      <%= form.label :first_name%>
      <%= form.text_field :first_name_cont ,class: "form-control"%>
    </div>

    <div class= "form-group"><br>
      <%= form.submit class: "btn btn-primary btn-lg"%>
    </div>
<% end %>
<%= link_to "Add Student", new_student_path%><br>
<br>
<table class="table table-bordered">
    <thead>
        <tr>
            
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email </th>
            <th>Add </th>
            <th colspan = "5">Actions</th>
           
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student|%>
            <tr>
                <td><%= student.name_with_email%></td>
                
                <td> <%= student.last_name%></td>
                <td> <%= add() %>  </td>
                <td> <%= student.email%></td>  

                <td><%= link_to 'View',student%></td>
                <td><%= link_to 'Edit',edit_student_path(student)%></td>
                 <td><%#= link_to "Delete", student_path(student), method: :delete %></td>
               <%#= button_to 'Delete',url_for(action: :destroy, id: student.id), data: {confirm: "Are you sure?"} %></td>
                <td><%= link_to 'Delete', student, method: :delete,
  data: {confirm: 'Are you sure you want Delete?'} %></td>
            </tr>
        <%end%>
    </tbody>
</table>

<%= paginate @students %>
</div>
