
<h1>This is Test and Practice Pages</h1>
<br>
<%= form_with url: "/students", method: :get do |form| %>
  <%#= form.label :query, "Search for:" %>
  <%#= form.text_field :query %>
  <%#= form.submit "Search" %>
<strong><p>Check Box</p></strong>
<%= form.check_box :pet_dog %>
<%= form.label :pet_dog, "I own a dog" %>
<%= form.check_box :pet_cat %>
<%= form.label :pet_cat, "I own a cat" %>
<br>
<strong><p>Radio Button</p></strong>
<%= form.radio_button :age, "child"%>
<%= form.label :age_child,"I am younger than 21"%>
<br>
<%= form.radio_button :age, "adult" %>
<%= form.label :age_adult, "I am over 21" %>

<strong><p>Other Important Field</p></strong>

<%= form.text_area :message, size: "70x5" %>
<%= form.hidden_field :parent_id, value: "foo" %>
<%= form.password_field :password %>
<%= form.number_field :price, in: 1.0..20.0, step: 0.5 %>
<%= form.range_field :discount, in: 1..100 %>
<%= form.date_field :born_on %>
<%= form.time_field :started_at %>
<%= form.datetime_local_field :graduation_day %>
<%= form.month_field :birthday_month %>
<%= form.week_field :birthday_week %>
<%= form.search_field :name %>
<%= form.email_field :address %>
<%= form.telephone_field :phone %>
<%= form.url_field :homepage %>
<%= form.color_field :favorite_color %>

<strong><p>
    Select 
</p></strong> 

<br>
<%= form.label :City%>
<%= form.select :city,{
        "Europe" => [ ["Berlin", "BE"], ["Madrid", "MD"] ],
        "North America" => [ ["Chicago", "CHI"] ],
      }, selected: "CHI"  %>

<strong>
    <p>Time Zone</p>
</strong>
<%= form.time_zone_select :time_zone %>
<strong><p>
     <%= form.date_select :birth_date %>
</p></strong>

<strong><p>
    <%= form.file_field :picture %><br>
    <%= text_field_tag form, :first_name %>

    <%= form.check_box :_destroy %>

    <%= check_box_tag "accept" %>

</p></strong>
<% end %>